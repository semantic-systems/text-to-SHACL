@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix ff: <https://foerderfunke.org/default#> .

ff:UserShape
  a sh:NodeShape ;
  sh:targetNode ff:User ;
  
  # Condition 1: Receives Grundsicherung (Bürgergeld)
  sh:property [
    sh:path ff:receivesBenefit ;
    sh:minCount 1 ;
    sh:hasValue ff:B100019_LB_106311931 ;  # Bürgergeld (Grundsicherung)
  ] ;
  
  # Condition 3: Participation approved by Jobcenter (commissioned training)
  sh:property [
    sh:path ff:participates ;
    sh:minCount 1 ;
    sh:node [
      a sh:NodeShape ;
      sh:property [
        sh:path ff:commissionedByEmploymentAgency ;
        sh:hasValue true ;
      ] ;
    ] ;
  ] .