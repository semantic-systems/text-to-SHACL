@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix ff: <https://foerderfunke.org/default#> .

ff:UserShape
    a sh:NodeShape ;
    sh:targetNode ff:User ;
    sh:property [
        # Requirement: User must have UnfitForWork earning capacity
        sh:path ff:hasEarningCapacity ;
        sh:hasValue ff:UnfitForWork ;
        sh:minCount 1
    ] ;
    sh:property [
        # Requirement: Triggering event must be work/commuting accident or occupational disease
        sh:path ( ff:hasEarningCapacity ff:triggeringEvent ) ;
        sh:node [
            sh:or (
                [ sh:class ff:WorkAccident ]
                [ sh:class ff:CommutingAccident ]
                [ sh:class ff:OccupationalDisease ]
            )
        ] ;
        sh:minCount 1
    ] .