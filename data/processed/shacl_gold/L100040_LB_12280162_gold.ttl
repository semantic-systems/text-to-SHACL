@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix ff: <https://foerderfunke.org/default#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .

# METADATA

ff:L100040_LB_12280162 a ff:SocialBenefit ;
    rdfs:label "Bildung und Teilhabe"@de, "Education and Participation" .

# CONSTRAINTS

ff:BildungUndTeilhabeShape a sh:NodeShape ;
    ff:checksFundingRequirement ff:L100040_LB_12280162 ;
    sh:targetNode ff:User ;
    # User receives citizen benefit OR (housing benefit AND child supplement) OR social assistance OR asylum seekers benefits
    sh:property [
        sh:path ff:receivesBenefit ;
        sh:qualifiedMinCount 1 ;
        sh:qualifiedValuehape ff:OtherBenefitsShape ;
    ] ;
    sh:property [
        sh:path ff:hasAge ;
        sh:minCount 1 ;
        sh:maxInclusive 25 ;
    ] .

ff:OtherBenefitsShape a sh:NodeShape ;
    sh:or (
        [ sh:hasValue ff:B100019_LB_581863 ] # child benefit
        [ sh:and (
            [ sh:hasValue ff:L100040_LB_8665924 ] # housing allowance
            [ sh:hasValue ff:B100019_LB_581863 ] # child supplement
        ) ]
        [ sh:hasValue ff:SocialAssistance ] # idlb unknown
        [ sh:hasValue ff:AsylumSeekersBenefits ] # idlb unknown
     ) .