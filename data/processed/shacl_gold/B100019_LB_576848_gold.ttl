@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix ff: <https://foerderfunke.org/default#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .

# METADATA

ff:B100019_LB_576848 a ff:SocialBenefit ;
    rdfs:label "Insolvenzgeld"@de, "Insolvency allowance"@en .

# CONSTRAINTS

ff:InsolvenzgeldShape a sh:NodeShape ;
    ff:checksFundingRequirement ff:B100019_LB_576848 ;
    sh:targetNode ff:User ;
    # User is an employee by law
    sh:property [
        sh:path ff:hasEmploymentStatus ;
        sh:minCount 1 ;
        sh:hasValue ff:Employed ;
        sh:message "Does not meet requirement 'User is an employee by law'."@en ;
    ] ;
    # An insolvency event occurred
    sh:property [ 
		sh:path ff:employedBy ;
		sh:minCount 1 ;
        sh:maxCount 1 ; # NOTE: Text does not cover the case of multiple employers
		sh:or (
            ff:InsolvencyEventShapeA
            ff:InsolvencyEventShapeB
            ff:InsolvencyEventShapeC
        ) ;
        sh:message "Does not meet requirement 'An insolvency event occurred.'"@en ;
	] ;
    # User wage was cut within 3 months before the insolvency event
    sh:property [
        sh:path ff:wageCut;
        sh:qualifiedValueShape [
			sh:path ff:monthsBeforeInsolvencyEvent ;
			sh:minExclusive 0 ;
            sh:maxInclusive 3 ;
		] ;
        sh:qualifiedMinCount 1 ;
    ] ;
    # User is employed in Germany OR temporarily abroad and obligated to pay social security in Germany
    sh:or (
        ff:CountryShapeA
        ff:CountryShapeB
    ) .

# Insolvency event A: Insolveny proceedings are opened against the employre's assets
ff:InsolvencyEventShapeA a sh:NodeShape ;
    sh:property [
        sh:path ff:openInsolvencyProceeding ;
        sh:minCount 1 ;
    ] .

# Insolvency event B: Insolvency application is rejected for lack of assets
ff:InsolvencyEventShapeB a sh:NodeShape ;
    sh:property [
        sh:path (ff:rejectedInsolvencyApplication ff:reason) ;
        sh:minCount 1 ;
        sh:in ( "Lack of assets"@en "Mangels Masse"@de ) ;
    ] .

# Insolvency event C: Business activity is completely discontinued
ff:InsolvencyEventShapeC a sh:NodeShape ;
    sh:property [
        sh:path ff:discontinuedBisunessActivity ;
        sh:minCount 1 ;
        sh:hasValue true ;
     ] .

# User is employed in Germany
ff:CountryShapeA a sh:NodeShape ;
    sh:property [
        sh:path ff:countryOfEmployment ;
        sh:minCount 1 ;
        sh:hasValue ff:Germany ;
    ] .

# User is employed abroad AND subuject to social security in Germany
ff:CountryShapeB a sh:NodeShape ;
    sh:property [
        sh:path ff:countryOfEmployment ;
        sh:minCount 1;
        sh:not [
            sh:hasValue ff:Germany
        ]
    ] ;
    sh:property [
        sh:path ff:socialSecurityCountry ;
        sh:minCount 1 ;
        sh:hasValue ff:Germany ;
    ] .